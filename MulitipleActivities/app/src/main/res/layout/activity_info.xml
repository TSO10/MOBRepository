<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="theme.mulitipleactivities.InfoActivity"
    android:weightSum="1">



    <TextView android:text="" android:layout_width="100dp"
        android:layout_height="50dp" android:id="@+id/firstnameLabel"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_alignRight="@+id/lastNameLabel"
        android:layout_alignEnd="@+id/lastNameLabel"
        android:layout_alignBottom="@+id/textView2" />

    <TextView android:text="" android:layout_width="100dp"
        android:layout_height="50dp" android:id="@+id/lastNameLabel"

        android:layout_gravity="center_vertical"

        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Firstname:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lastname:"
        android:id="@+id/textView3"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/firstnameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
